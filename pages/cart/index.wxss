page {
  padding-bottom: 90rpx;
}
.revice_address_row .address_btn {
  padding: 20rpx;
}
.revice_address_row .address_btn button {
  width: 60%;
  font-size: 36rpx;
  border-radius: 15rpx;
  border-color: var(--themeColor);
  background-color: var(--themeColor);
  color: white;
}
.revice_address_row .user_info_row {
  font-size: 30rpx;
  display: flex;
  padding: 20rpx;
  color: #666;
}
.revice_address_row .user_info_row .user_info {
  flex: 5;
}
.revice_address_row .user_info_row .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content .content_title {
  font-size: 36rpx;
  padding: 20rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
}
.cart_content .cart_list .cart_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx;
}
.cart_content .cart_list .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .cart_item .cart_chk_wrap checkbox-group checkbox .wx-checkbox-input {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
}
.cart_content .cart_list .cart_item .imgwrap {
  flex: 2;
}
.cart_content .cart_list .cart_item .imgwrap image {
  width: 220rpx;
  height: 200rpx;
}
.cart_content .cart_list .cart_item .content_info {
  flex: 6;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_list .cart_item .content_info .dsc {
  font-size: 32rpx;
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_list .cart_item .content_info .price_num {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.cart_content .cart_list .cart_item .content_info .price_num .price {
  color: var(--themeColor);
}
.cart_content .cart_list .cart_item .content_info .price_num .num_wrap {
  display: flex;
  font-size: 32rpx;
  font-weight: 400;
  margin-right: 43rpx;
}
.cart_content .cart_list .cart_item .content_info .price_num .num_wrap .edit_num {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #666;
  color: #666;
}
.cart_content .cart_list .cart_item .content_info .price_num .num_wrap .num {
  color: #666;
  margin: 0 20rpx;
}
.cart_content .cart_list .cart_item .content_info .price_num .num_wrap .add {
  padding: 0 15rpx;
}
.cart_content image {
  width: 100vw;
}
.bottom_tools {
  font-size: 34rpx;
  position: fixed;
  height: 100rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #ccc;
}
.bottom_tools .allchoose {
  flex: 1;
}
