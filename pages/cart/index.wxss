.bottom_tools .allchoose checkbox-group checkbox .wx-checkbox-input {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
}
.bottom_tools .total_yunfei {
  padding-right: 30rpx;
  flex: 2;
  text-align: right;
}
.bottom_tools .total_yunfei .totolprice {
  font-size: 200;
}
.bottom_tools .total_yunfei .totolprice .price {
  color: var(--themeColor);
}
.bottom_tools .total_yunfei .yunfei {
  font-size: 26rpx;
  color: #666;
}
.bottom_tools .pay {
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
  flex: 1;
}
.loginto {
  margin: 20rpx auto;
  height: 80rpx;
  width: 70%;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #75c275;
  border-radius: 15rpx;
  color: #75c275;
  font-weight: 600;
  font-size: 34rpx;
}
.dsc-text {
  color: #666;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 300rpx;
}
.dsc-text .icon-shopshoppingco {
  font-size: 100rpx;
}
.dsc-text .text {
  font-size: 30rpx;
  margin-top: 20rpx;
}
