.first_tab .goods_item {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 10rpx;
}
.first_tab .goods_item:nth-child(1) {
  border-top: 5rpx solid #ccc;
}
.first_tab .goods_item .goods_img_wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 2;
}
.first_tab .goods_item .goods_img_wrap image {
  width: 50%;
}
.first_tab .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .goods_info_wrap .goods_name {
  font-size: 26rpx;
  /* width: 500rpx;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;*/
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 40rpx;
}
